<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_vertical|center_horizontal">

    <TextView android:text="Shake to get a Random Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHelp"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etRandomNums"
        android:text="00 00 00 00 00 "
        android:textSize="25dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="PowerBall Number"
        android:id="@+id/tvInfo"
        android:layout_alignTop="@+id/etRandomNums"
        android:layout_marginTop="65dp"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/tvHelp"
        android:layout_alignStart="@+id/tvHelp"
        android:layout_alignRight="@+id/tvHelp"
        android:layout_alignEnd="@+id/tvHelp"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etRandNumb"
        android:layout_below="@+id/tvInfo"
        android:layout_alignLeft="@+id/etRandomNums"
        android:layout_alignStart="@+id/etRandomNums"
        android:layout_alignRight="@+id/etRandomNums"
        android:layout_alignEnd="@+id/etRandomNums"
        android:text="00"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Power Numbers"
        android:id="@+id/tvPower"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
